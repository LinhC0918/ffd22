<% provide(:title, t(".change_password")) %>
<h1 class="text-center"><%= t ".change_password" %></h1>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
      html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, t(".new_password") %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>
            <%= t ".characters_minimum" %>)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t(".confirm_new_password") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".submit"), class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

